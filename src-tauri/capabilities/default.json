{
  "$schema": "../gen/schemas/desktop-schema.json",
  "description": "Default capabilities for Bay State Scraper",
  "identifier": "default",
  "permissions": [
    "core:default",
    "core:event:default",
    "core:window:default",
    "dialog:default",
    "process:default",
    "shell:default",
    "store:default",
    "updater:default",
    {
      "allow": [
        {
          "args": true,
          "name": "binaries/scraper-sidecar",
          "sidecar": true
        }
      ],
      "identifier": "shell:allow-execute"
    },
    {
      "allow": [
        {
          "args": true,
          "name": "binaries/scraper-sidecar",
          "sidecar": true
        }
      ],
      "identifier": "shell:allow-spawn"
    }
  ],
  "windows": ["main"]
}
